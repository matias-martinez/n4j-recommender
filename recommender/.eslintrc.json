{
    "extends": "airbnb-base",
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
        // Overrides
        "max-len": [2, 120],
        "indent": [2, 4, {"SwitchCase": 1}],
        "object-curly-spacing": [2, "never"],
        "no-multiple-empty-lines": [2, {"max": 1}],
        "no-underscore-dangle": [2, {"allow": ["_id", "_rev", "_deleted", "__all__"]}],

        "default-case": [0],
        "consistent-return": [0],
        "global-require": [0],
        "yoda": [0],
        "class-methods-use-this": [0],
        "arrow-parens": [0],
        "arrow-body-style": [0],
        "no-mixed-operators": [0],
        "no-param-reassign": [0],
        "no-return-assign": [0],
        "no-use-before-define": [0],
        "no-case-declarations": [0],
        "no-confusing-arrow": [0],
        "no-console": [0],
        "no-multi-assign": [0],
        "no-plusplus": [0],
        "no-shadow": [0],
        "no-useless-escape": [0],
        "new-cap": [0]
    }
}
